// CONTENT

$menu-width = 250px

#header
  position: fixed
  width: $menu-width
  padding: $margin-small
  z-index: 200
  font-family: 'Calibre-Bold', font-stack('Helvetica');
  font-weight: 700

#header-name
  height: $margin-mid

.header-menu-item
  cursor: pointer
  a
    display: block

.header-menu-active
  &:after
    display: block
    padding: .7rem 0
    content: 'âžž'

$main-content-offset = $margin-small + $margin-mid

#main-content-container
  position: fixed
  width: 'calc(100vw - %s)' % ($menu-width + $margin-small)
  left: $menu-width + $margin-small
  height: 100vh
  z-index: 200
  padding-top: $main-content-offset
  overflow-y: scroll

#main-content
  width: 360px

.page-content
  display: none

.page-content-active
  display: block

// ******************************************************

// MAP

#map
  width: 300vw
  height: 300vh
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  display: flex
  flex-wrap: wrap
  transform: translate(-33.3333333%, -33.333333%)
  transition: transform 100ms
  z-index: 100

.map-block
  position: relative
  width: 100vw
  height: 100vh
  display: flex
  align-items: center
  justify-content: center
  font-size: 10em
  z-index: 100

// ******************************************************

// BACKGROUND SHAPES

#background-shape-holder
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  z-index: 0

#background-shape
  z-index: 0
  transition: background-color $transition-duration
  path
    stroke-width: 0
    fill: $color-white
    stroke: $color-white
    stroke-width: 0
    stroke-miterlimit: 10
    stroke-linejoin: round
    transition: fill $transition-duration, stroke $transition-duration, stroke-width $transition-duration
  &.shape-state-1
    path
      fill: $color-blue
      stroke: $color-blue
  &.shape-state-2
    path
      fill: $color-white
      stroke: $color-red
      stroke-width: $stroke-width
  &.shape-state-3
    path
      fill: $color-yellow
      stroke: $color-yellow
  &.shape-state-4
    path
      fill: $color-white
      stroke: $color-yellow
      stroke-width: $stroke-width
  &.shape-state-5
    path
      fill: $color-grey
      stroke: $color-white
      stroke-width: $stroke-width
  &.shape-state-6
    background-color: $color-blue
    path
      fill: $color-blue
      stroke: $color-white
      stroke-width: 1px
  &.shape-state-7
    path
      fill: $color-red
      stroke: $color-red

@media screen and (orientation: landscape)
  #background-shape
    width: 100%

@media screen and (orientation: portrait)
  #background-shape
    height: 100%

