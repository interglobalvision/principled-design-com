// CONTENT

$menu-width = 250px

$fade-duration = .3s

.fade-element
  opacity: 0

#header
  position: fixed
  width: 100vw
  padding: $margin-basic
  z-index: 200

#header-name
  height: 1rem

#header-menu
  display: none

.header-menu-item
  cursor: pointer
  &:after
    display: flex
    height: 0
    content: 'âžž'
    align-items: center
    overflow: hidden
    transition: height $fade-duration
  a
    display: block

.header-menu-active
  &:after
    height: 2.8rem

#main-content
  padding-top: 'calc(1rem + %s)' % ($margin-basic)
  padding-bottom: $margin-basic

.page-content
  padding: $margin-basic

.mobile-visual
  padding: 0 $margin-basic

// ******************************************************

// MAP

#map
  width: 300vw
  height: 300vh
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  display: flex
  flex-wrap: wrap
  transform: translate(-33.3333333%, -33.333333%)
  transition: transform 50ms linear
  z-index: -100

  &.slow-pan
    transition: transform 300ms linear


.map-block
  position: relative
  width: 100vw
  height: 100vh
  display: none
  align-items: center
  justify-content: center
  font-size: 10em
  z-index: 100

.map-block-content
  display: flex
  justify-content: center
  align-items: center
  transition: opacity $fade-duration
  img, video
    max-width: 50vw

#lat-long
  position: fixed
  top: $margin-small
  right: $margin-small
  pointer-events: none
  z-index: 200
  font-family: 'Calibre-Regular', font-stack('Helvetica');
  font-weight: 400

// ******************************************************

// MINIMAP

#minimap
  position: fixed
  bottom: $margin-small
  left: $margin-small
  z-index: 300

#minimap-border
  position: absolute
  top: 0
  left: 0
  width: 9vw
  height: 9vh
  border: 2px solid $color-black
  pointer-events: none

.minimap-row
  display: flex
  flex-direction: row

.minimap-button
  width: 3vw
  height: 3vh
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  font-size: 10px
  cursor: pointer
  span
    padding-top: 2px

#minimap-indicator
  width: 3vw
  height: 3vh
  position: absolute
  top: 0
  left: 0
  border: 2px solid $color-black
  pointer-events: none
  transform: translate(3vw, 3vh)
  transition: transform 50ms linear

// ******************************************************

// BACKGROUND SHAPES

#background-pattern-holder
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 0

  svg
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    margin: auto
    z-index: 0
    opacity: 0

    path,
    polygon
      fill: $color-white
      stroke: $color-yellow
      stroke-width: 10px
      stroke-miterlimit: 10
      stroke-linejoin: round
      // transition: fill $transition-duration, stroke $transition-duration, stroke-width $transition-duration

    &.show
      opacity: 1

@media screen and (orientation: landscape)
  #background-pattern-holder svg
    width: 100%

@media screen and (orientation: portrait)
  #background-pattern-holder svg
    height: 100%

